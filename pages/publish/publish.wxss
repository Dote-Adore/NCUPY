.introductionInput{
  margin: 20px;
  border: 1px;
  border-color: black;
  height:150px;
  width: 90%;
  line-height: 10px;
  font-size: 18px;
}
.optionContain{
  margin: 30px;
  padding-left: 10px;
  padding-right: 10px;
  font-weight: bold;
  border-style: solid;
  border-top-width: 1px ;
  border-bottom-width: 1px;
  border-left: 0;
  border-right: 0;
  border-color: #dddddd;
}
.price{
  float: right;
  width: 60px;
  margin: 2px;

}
.options{
  padding: 15px;
}
#option2{
  border-style: solid;
  border-left: 0;
  border-right: 0;
  border-bottom: 0;
  border-top-width: 1px;
  border-color: #EDEDED;

}
.q-image-wrap{
  float: left;
  margin-bottom: 5px;
  padding: 2px;
  position: relative;
}
.q-image{
  width: 100%;
  height:100%;
  border-radius: 4px  /**添加圆角     */
}
.images{
  overflow:hidden;
  zoom: 1;
  margin: auto
}
.chooseImageBtn{
  float: left;

  margin: auto;
  color: white;
  width: 50%;
  height: 50%;
}
.addPictureBtnBG{
  background-color: #EFEFEF;
  border-radius: 5px;
  margin: 0 0 25px 2px;
  display: flex;
  justify-content: center; 
}
.publishBtn{
  margin: auto;
  width: 80%;
  height: 45px;
  line-height: 45px;
  color: white;
}
.q-image-remover{
  position: absolute;
  right: 0px;
  top: 0px;
  width: 25px;
  height: 25px;
  border-radius: 4px;
  opacity: 0.6;
}

.tagarray{
  float: right;
}