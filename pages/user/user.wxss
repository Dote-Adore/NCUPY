page{
  background-color: #EDEDED;
}
.messageicon{
  width: 30px;
  height: 30px;
  position: absolute;
  right: 20px;
  top: 0px;
}
.userinfo{
  position: relative;
  padding: 20px;
}
.avatar{
  position: absolute;
  width: 90px;
  height: 90px;
  top:40px;
  right: 25px;
  border-radius: 3px;
  background-color: gray;
}
.area{
  color: white;
  font-size: 15px;
}
.nickname{
  color: white;
  width: 200px;
  font-size: 23px;
  font-weight: bold;
  height: 30px;
  max-width: 200px;
  margin-bottom: 5px;
}
.pricenum{
  font-size: 15px;
  width: 200px;
  padding: 10px 0 15px 0;
  color: white;
}
.userInfoBtn{
  text-align: center;
  float: left;
  width: 75px;
  padding: 10px 10px 0 10px;
  color: white;
}
.num{
  font-weight: bold;
}
.follow-follower{
  border-width: 1px 0 0 0;
  border-color: #fda883;
  border-style: solid;
  
  overflow: hidden;
  zoom: 1;
  width: 190px;
}
.editBtn{
  position: absolute;   
  color: white;
  right:15px;
  bottom: 20px;
  border: 1px;
  padding: 5px 7px 5px 7px;
  border-color: white;
  border-style: solid;
  border-radius: 5px;
}


.menu-class{
  margin-top: 15px;
  padding: 0 10px 0 10px;
  background-color: white;
}
.menuItem{
  padding: 15px;
  overflow: hidden;
  zoom: 1;
  font-size: 15px;
  border-color: #EDEDED;
  border-width: 0 0 1px 0;
  border-style: solid;
}
.menuTitle{
  font-weight: lighter;
  width: 100px; 
  float: left;
}
.menuNum{
  width: 40px;
  float: right;
  font-weight: lighter;
  color: #999999;
  text-align: right;
}



